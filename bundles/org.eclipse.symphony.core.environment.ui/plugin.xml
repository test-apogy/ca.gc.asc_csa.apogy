   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:ca.gc.asc_csa.symphony.ui.menu?after=additions">
         <command
               commandId="org.eclipse.symphony.core.environment.ui.commands.TrajectoryProviderClearCommand"
               label="Clear Trajectory"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                   <iterate
                      ifEmpty="false"
                      operator="or">
                        <instanceof
                            value="org.eclipse.symphony.core.environment.ui.TrajectoryProvider">
                        </instanceof>
                   </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.environment.ui.commands.TrajectoryProviderInitializeCommand"
               label="Initialize Trajectory"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                   <iterate
                      ifEmpty="false"
                      operator="or">
                        <instanceof
                           value="org.eclipse.symphony.core.environment.ui.TrajectoryProvider">
                        </instanceof>
                   </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.environment.ui.commands.TrajectoryProviderSaveTrajectoryToFileCommand"
               label="Save Trajectory To File"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                    <iterate
                       ifEmpty="false"
                       operator="or">
                         <instanceof
                             value="org.eclipse.symphony.core.environment.ui.TrajectoryProvider">
                         </instanceof>
                     </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.environment.ui.commands.TrajectoryProviderLoadTrajectoryToFileCommand"
               label="Load Trajectory From File"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                    <iterate
                       ifEmpty="false"
                       operator="or">
                         <instanceof
                             value="org.eclipse.symphony.core.environment.ui.TrajectoryProvider">
                         </instanceof>
                    </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.environment.ui.commands.MapToolActivateCommand"
               label="Activate Tool"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                    <iterate
                       ifEmpty="false"
                       operator="or">
                         <instanceof
                             value="org.eclipse.symphony.core.environment.ui.MapTool">
                         </instanceof>
                    </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.environment.ui.commands.MapToolDeActivateCommand"
               label="De-Activate Tool"
               style="push">
            <visibleWhen
                  checkEnabled="false">
