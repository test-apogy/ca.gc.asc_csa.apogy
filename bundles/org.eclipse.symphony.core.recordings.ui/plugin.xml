<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.symphony.core.recordings.ui.commands.StartRecorderCommand"
            id="org.eclipse.symphony.core.recordings.ui.commands.StartRecorderCommand"
            name="StartRecorderCommand">
      </command>
      <command
            defaultHandler="org.eclipse.symphony.core.recordings.ui.commands.StopRecorderCommand"
            id="org.eclipse.symphony.core.recordings.ui.commands.StopRecorderCommand"
            name="StopRecorderCommand">
      </command>
      <command
            defaultHandler="org.eclipse.symphony.core.recordings.ui.commands.PauseRecorderCommand"
            id="org.eclipse.symphony.core.recordings.ui.commands.PauseRecorderCommand"
            name="PauseRecorderCommand">
      </command>
      <command
            defaultHandler="org.eclipse.symphony.core.recordings.ui.commands.ResumeRecorderCommand"
            id="org.eclipse.symphony.core.recordings.ui.commands.ResumeRecorderCommand"
            name="ResumeRecorderCommand">
      </command>
      <command
            defaultHandler="org.eclipse.symphony.core.recordings.ui.commands.ExportToCSVCommand"
            id="org.eclipse.symphony.core.recordings.ui.commands.ExportToCSVCommand"
            name="ExportToCSVCommand">
      </command> 
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:ca.gc.asc_csa.symphony.ui.menu?after=additions">
         <command
               commandId="org.eclipse.symphony.core.recordings.ui.commands.StartRecorderCommand"
               label="Start Recorder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                  <and>
                  	 <count value="1"/>
                     <iterate
                       ifEmpty="false"
                       operator="or">
                         <instanceof
                             value="org.eclipse.symphony.core.recordings.Recorder">
                         </instanceof>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.recordings.ui.commands.StopRecorderCommand"
               label="Stop Recorder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                  <and>
                     <count value="1"/>
                     <iterate
                        ifEmpty="false"
                        operator="or">
                           <instanceof
                              value="org.eclipse.symphony.core.recordings.Recorder">
                           </instanceof>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.recordings.ui.commands.PauseRecorderCommand"
               label="Pause Recorder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                  <and>
                     <count value="1"/>
                     <iterate
                        ifEmpty="false"
                        operator="or">
                          <instanceof
                             value="org.eclipse.symphony.core.recordings.Recorder">
                          </instanceof>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.core.recordings.ui.commands.ResumeRecorderCommand"
               label="Resume Recorder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                  <and>
                     <count value="1"/>
                     <iterate
                        ifEmpty="false"
                        operator="or">
                         <instanceof
                            value="org.eclipse.symphony.core.recordings.Recorder">
                         </instanceof>
                     </iterate>
                  </and>
               </with>
            </visibleWhen>
         </command>
                 <command
               commandId="org.eclipse.symphony.core.recordings.ui.commands.ExportToCSVCommand"
               label="Export Channel To CSV"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                    variable="activeMenuSelection">
                  <or>
                     <and>
                        <count value="1"/>
                        <iterate
                           ifEmpty="false"
                           operator="or">
                             <instanceof
                                value="org.eclipse.symphony.core.recordings.RecordingTrack">
                             </instanceof>
                        </iterate>
                     </and>
                     <and>
                        <count value="1"/>
                        <iterate
                           ifEmpty="false"
                           operator="or">
                             <instanceof
                                 value="org.eclipse.symphony.core.recordings.Recording">
                             </instanceof>
                         </iterate>
                     </and>
                  </or>
               </with>   
            </visibleWhen>
             </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="org.eclipse.symphony.common.ui.property.properties.ExtendedTabbedPropertySheetPage.Contributor">
         <propertyTab
               category="org.eclipse.symphony.core.recordings.ui.category.Default"
               id="org.eclipse.symphony.core.recordings.ui.property.tab.RecordingTrack"
               label="Plot">
         </propertyTab>
         <propertyTab
               category="org.eclipse.symphony.core.recordings.ui.category.Default"
               id="org.eclipse.symphony.core.recordings.ui.property.tab.Player"
               label="Controls">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="org.eclipse.symphony.common.ui.property.properties.ExtendedTabbedPropertySheetPage.Contributor">
         <propertySection
               class="org.eclipse.symphony.core.recordings.ui.properties.sections.RecordingTrackPropertySection"
               id="org.eclipse.symphony.core.recordings.ui.property.section.RecordingTrack"
               tab="org.eclipse.symphony.core.recordings.ui.property.tab.RecordingTrack">
            <input
                  type="org.eclipse.symphony.core.recordings.RecordingTrack">
            </input>
         </propertySection>
      </propertySections>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="org.eclipse.symphony.common.ui.property.properties.ExtendedTabbedPropertySheetPage.Contributor">
         <propertyCategory
               category="org.eclipse.symphony.core.recordings.ui.category.Default"></propertyCategory>
      </propertyContributor>
   </extension>

</plugin>
