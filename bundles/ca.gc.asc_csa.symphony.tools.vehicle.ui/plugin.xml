<plugin>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated symphony_tools_vehicle_ui -->
      <package
            uri="org.eclipse.symphony.addons.vehicle.ui"
            class="org.eclipse.symphony.addons.vehicle.ui.SymphonyToolsVehicleUIPackage"
            genModel="model/symphony_tools_vehicle_ui.xcore"/>
   </extension>
   <extension
         point="ca.gc.space.topology.ui.presentation">
      <Class
            Class="org.eclipse.symphony.addons.vehicle.ui.adapters.WheelPresentationAdapter">
      </Class>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.symphony.addons.vehicle.ui.preferences.VehicleUIPreferencesInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="ca.gc.asc_csa.topology.ui.viewer.preferences.TopologyViewerPreferencesPage"
            class="org.eclipse.symphony.addons.vehicle.ui.preferences.VehicleUIPreferencesPage"
            id="org.eclipse.symphony.addons.vehicle.ui.preferences.VehicleUIPreferencesPage"
            name="Vehicules">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.eclipse.symphony.addons.vehicle.ui.commands.ReInitializeWheeledVehiclePoseCorrectorCommand"
            id="org.eclipse.symphony.addons.vehicle.ui.commands.ReInitializeWheeledVehiclePoseCorrectorCommand"
            name="ReInitializeWheeledVehiclePoseCorrector">
      </command>
      <command
            defaultHandler="org.eclipse.symphony.addons.vehicle.ui.commands.PathPlannerToolReplanCommand"
            id="org.eclipse.symphony.addons.vehicle.ui.commands.PathPlannerToolReplanCommand"
            name="Re-Plan Path">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.symphony.core.ui.menu?after=additions">
         <command
               commandId="org.eclipse.symphony.addons.vehicle.ui.commands.ReInitializeWheeledVehiclePoseCorrectorCommand"
               label="Reinitialize Pose Corrector"
               style="push">
            <visibleWhen
                  checkEnabled="false">
                <with
                     variable="activeMenuSelection">
                   <iterate
                       ifEmpty="false"
                       operator="or">
                       <instanceof
                            value="org.eclipse.symphony.addons.vehicle.WheeledVehiculePoseCorrector">
                       </instanceof>
                    </iterate>
                </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.symphony.addons.vehicle.ui.commands.PathPlannerToolReplanCommand"
               label="Re-Plan Path"
               style="push">
            <visibleWhen
                  checkEnabled="false">
                <with
                     variable="activeMenuSelection">
                   <iterate
                       ifEmpty="false"
                       operator="or">
                       <instanceof
                            value="org.eclipse.symphony.addons.vehicle.PathPlannerTool">
                       </instanceof>
                   </iterate>
                </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="ca.gc.space.topology.ui.presentation">
      <Class
            Class="org.eclipse.symphony.addons.vehicle.ui.adapters.LanderSphericalFootPresentationAdapter">
      </Class>
   </extension>
   <extension
         point="ca.gc.space.topology.ui.presentation">
      <Class
            Class="org.eclipse.symphony.addons.vehicle.ui.adapters.ThrusterPresentationAdapter">
      </Class>
   </extension>

</plugin>
